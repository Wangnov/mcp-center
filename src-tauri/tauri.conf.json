{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "MCP Center",
  "version": "0.0.1",
  "identifier": "com.mcp.center",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCP Center",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "shadow": true,
        "center": true,
        "visibleOnAllWorkspaces": false
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null,
      "freezePrototype": false,
      "dangerousDisableAssetCspModification": false,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "pattern": {
        "use": "brownfield"
      },
      "capabilities": []
    },
    "trayIcon": null,
    "macOSPrivateApi": true,
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": null,
    "homepage": null,
    "category": "DeveloperTool",
    "shortDescription": "MCP Server Management Center",
    "longDescription": "A centralized management application for multiple MCP (Model Context Protocol) servers",
    "externalBin": null,
    "copyright": null,
    "licenseFile": null,
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "frameworks": [],
      "files": {}
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": null,
      "nsis": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "iOS": {
      "minimumSystemVersion": "13.0"
    },
    "android": {
      "minSdkVersion": 24
    },
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
